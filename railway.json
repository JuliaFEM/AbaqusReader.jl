{
    "$schema": "https://railway.app/railway.schema.json",
    "build": {
        "builder": "DOCKERFILE",
        "dockerfilePath": "visualizer/Dockerfile",
        "watchPatterns": [
            "visualizer/**",
            "src/**",
            "testdata/**"
        ]
    },
    "deploy": {
        "restartPolicyType": "ON_FAILURE",
        "restartPolicyMaxRetries": 10
    }
}
